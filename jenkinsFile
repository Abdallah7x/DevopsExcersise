pipeline {
    agent {
        docker {
            image 'python:latest'
        }
    }

 stage ('Build python Docker') {
            steps {
                script {
				bat 'docker build -t python-docker ./'
				
                     }
            }
        }
      
        stage ('Run python Docker') {
            steps {
				script{
                bat 'docker run python-docker'
                
				}
			}
        }
    stages {
        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'python script.py'
            }
        }
    }
}
