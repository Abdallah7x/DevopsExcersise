pipeline {
    agent {
        docker {
            image 'python:latest'
        }
    }

 stages ('Build python Docker') {
            stage {
                script {
				bat 'docker build -t python-docker ./'
				
                     }
            }
       
      
        stage ('Run python Docker') {
            steps {
				script{
                bat 'docker run python-docker'
                
				}
			}
        }
   
      }
        }
    
